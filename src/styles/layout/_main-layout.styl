*
    margin 0
    padding 0
    box-sizing border-box
    poppins()

.wrapper
    width 70%
    margin auto
    position relative

h1
    color $green_dk
    font-weight bold
    text-align center
    padding 2rem 0
    letter-spacing 5px

h3
    color $green_dk2
    font-size .95rem
    poppinsS()

.section
    padding 2rem 0

.redes
    position absolute
    right -14%
    &-container, a
        color $green_dk
        list-style none
        text-decoration none
    &-item
        line-height 1.3
        poppinsM()
        &:first-child
            padding-left 2px
            .separator
                padding-left 1px
        &:nth-child(2)
            .separator
                padding-left 4px
        &:nth-child(3)
            padding-left 2px
            .separator
                padding-left 2px
        &:nth-child(4)
            padding-left 2px
        .name
            overflow: hidden
            width : 0;
            opacity: 0;
            transition: width 400ms, opacity 400ms;

        &:hover
            .name
                width: auto
                opacity: 1;
        &-name
            font-weight bold

        @keyframes fade-in
            from 
                opacity: 0
            to 
                opacity: 1
    .separator
        color $turquesa
        display block
        margin auto
    
    @media screen and (max-width 480px) 
        display none

@import '_soy';
@import '_skills';
@import '_proyects';
