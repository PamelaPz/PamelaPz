.proyects
    &-content
        display flex
        margin 3.5rem 0
        &-left
            width 35%
        &-right
            width 65%
            margin auto
    &-list
        list-style none
        text-decoration none
        li
            padding-bottom 2rem
            &:last-child
                padding-bottom 0
    &-items
        color $green
        font-size 1.5rem
        transition .2s all ease-in-out
        text-decoration none
        &:hover
            poppinsB()
    .active
        poppinsB()
    a
        cursor pointer

.wp-sites
    background-color $turquesa_lg
    height 100%
    width 100%
    border-radius 20px
    margin auto
    animation zoom 1s infinite
    transition all .3s ease-in

@keyframes zoom
  0%
    box-shadow 0px 0px 0px 0px $gray_dkOP
  20%
    box-shadow 0px 0px 10px 5px $gray_dkOP
  40%
    box-shadow 0px 0px 20px 10px $gray_dkOP
  60%
    box-shadow 0px 0px 20px 10px $gray_dkOP
  80%
    box-shadow 0px 0px 10px 5px $gray_dkOP
  100%
    box-shadow 0px 0px 0px 0px $gray_dkOP